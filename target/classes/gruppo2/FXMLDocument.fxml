<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo2.FXMLDocumentController">
   <children>
      <StackPane prefHeight="700.0" prefWidth="900.0" styleClass="background">
         <children>
            <!-- Pane 1: Folder Selection -->
            <AnchorPane fx:id="pane1" prefHeight="700.0" prefWidth="900.0">
               <children>
                  <VBox alignment="CENTER" layoutY="96.0" prefHeight="700.0" prefWidth="900.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label styleClass="header-label" text="Before starting you have to select a Folder" />
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#folderSelection" styleClass="round-button" text="Start!">
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>

            <!-- Pane 2: Query and Results -->
            <AnchorPane fx:id="pane2" prefHeight="700.0" prefWidth="900.0" visible="false">
               <children>
                  <SplitPane dividerPositions="0.35412026726057905" layoutY="-1.0" orientation="HORIZONTAL" prefHeight="700.0" prefWidth="900.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <items>
                        <VBox alignment="CENTER" minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="300.0" spacing="20.0" styleClass="left-pane">
                           <children>
                              <Label styleClass="search-label" text="Search Query" />
                              <TextField fx:id="queryTf" focusTraversable="false" styleClass="round-text-field">
                                 <font>
                                    <Font size="20.0" />
                                 </font>
                              </TextField>
                              <Button focusTraversable="false" mnemonicParsing="false" onAction="#handleQuery" styleClass="round-button small-button" text="Confirm">
                                 <font>
                                    <Font size="18.0" />
                                 </font>
                              </Button>
                              <ProgressIndicator fx:id="progressIndicator" focusTraversable="false" prefHeight="67.0" prefWidth="77.0" progress="0.0" />
                              <Label fx:id="collectionStatisticsLabel" styleClass="collection-stats" text="Collection Statistics will appear here" />
                           </children>
                        </VBox>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="700.0" prefWidth="600.0" styleClass="right-pane">
                           <children>
                              <TableView fx:id="tableView" prefHeight="698.0" prefWidth="625.0" styleClass="table-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                                 <columns>
                                    <TableColumn fx:id="titleColumn" editable="false" prefWidth="624.0" sortable="false" />
                                 </columns>
                              </TableView>
                           </children>
                        </AnchorPane>
                     </items>
                  </SplitPane>
               </children>
            </AnchorPane>

            <!-- Pane 3: Document View -->
            <AnchorPane fx:id="paneDocumento" prefHeight="700.0" prefWidth="900.0" visible="false">
               <children>
                  <TextArea fx:id="corpoDocumento" editable="false" layoutX="30.0" layoutY="50.0" prefHeight="300.0" prefWidth="840.0" wrapText="true" />
                  <Button fx:id="chiudiDocumento" layoutX="840.0" layoutY="10.0" mnemonicParsing="false" onAction="#chiudiDocumento" prefHeight="29.0" prefWidth="50.0" styleClass="transparent-button" text="Close">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <VBox layoutX="30.0" layoutY="370.0" spacing="10.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="STATISTICHE DOCUMENTO" />
                        <Label fx:id="statisticheDocumentoLabel" text="" />
                     </children>
                  </VBox>
                  <Label fx:id="documentTitleLabel" layoutX="30.0" layoutY="20.0" prefHeight="25.0" prefWidth="300.0" style="-fx-font-weight: bold;" text="TESTO DOCUMENTO" />
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
