<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gruppo2.FXMLDocumentController">
   <children>
      <StackPane prefHeight="700.0" prefWidth="900.0" styleClass="background">
         <children>
            <!-- Pane 1: Folder Selection -->
            <AnchorPane fx:id="pane1" prefHeight="700.0" prefWidth="900.0">
               <children>
                  <VBox alignment="CENTER" layoutY="96.0" prefHeight="700.0" prefWidth="900.0" spacing="30.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <children>
                        <Label styleClass="header-label" text="Before starting you have to select a Folder" />
                        <Button focusTraversable="false" mnemonicParsing="false" onAction="#folderSelection" styleClass="round-button" text="Start!">
                           <font>
                              <Font size="19.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </AnchorPane>
      
            <!-- Pane 2: Query and Results -->
            <AnchorPane fx:id="pane2" prefHeight="719.0" prefWidth="914.0" visible="false">
               <children>
                  <TableView fx:id="tableView" layoutY="104.0" prefHeight="593.0" prefWidth="616.0" styleClass="table-view" AnchorPane.bottomAnchor="3.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="284.0" AnchorPane.topAnchor="104.0">
                     <columns>
                        <TableColumn fx:id="titleColumn" editable="false" prefWidth="624.0" sortable="false" />
                     </columns>
                  </TableView>
                  <TextField fx:id="queryTf" focusTraversable="false" layoutX="28.0" layoutY="25.0" prefHeight="54.0" prefWidth="441.0" promptText="Write your query..." styleClass="round-text-field">
                     <font>
                        <Font size="20.0" />
                     </font>
                  </TextField>
                  <Button layoutX="694.0" layoutY="104.0" mnemonicParsing="false" onAction="#collectionStatistics" prefHeight="39.0" prefWidth="114.0" text="STATISTICS">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Button focusTraversable="false" layoutX="494.0" layoutY="33.0" mnemonicParsing="false" onAction="#handleQuery" styleClass="round-button small-button" text="CONFIRM">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
                  <Label fx:id="collectionStatisticsLabel" alignment="TOP_CENTER" layoutX="620.0" layoutY="188.0" prefHeight="271.0" prefWidth="277.0" />
                  <ProgressIndicator fx:id="progressIndicator" layoutX="668.0" layoutY="24.0" progress="0.0" />
               </children>
            </AnchorPane>

            <!-- Pane 3: Document View -->
            <AnchorPane fx:id="paneDocumento" prefHeight="700.0" prefWidth="900.0" visible="false">
               <children>
                  <TextArea fx:id="corpoDocumento" editable="false" layoutX="26.0" layoutY="78.0" prefHeight="593.0" prefWidth="591.0" wrapText="true" />
                  <Button fx:id="chiudiDocumento" layoutX="840.0" layoutY="10.0" mnemonicParsing="false" onAction="#chiudiDocumento" prefHeight="29.0" prefWidth="50.0" styleClass="transparent-button" text="Close">
                     <font>
                        <Font size="13.0" />
                     </font>
                  </Button>
                  <Label fx:id="documentTitleLabel" alignment="CENTER" layoutX="54.0" layoutY="25.0" prefHeight="39.0" prefWidth="536.0" style="-fx-font-weight: bold;" text="TESTO DOCUMENTO">
                     <font>
                        <Font size="18.0" />
                     </font></Label>
                  <Label fx:id="statisticheDocumentoLabel" alignment="TOP_CENTER" layoutX="619.0" layoutY="155.0" prefHeight="391.0" prefWidth="277.0" />
                  <Button layoutX="694.0" layoutY="103.0" mnemonicParsing="false" onAction="#statisticheDocumento" text="STATISTICS">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Button>
               </children>
            </AnchorPane>
         </children>
      </StackPane>
   </children>
</AnchorPane>
